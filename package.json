{
  "name": "@openfga/syntax-transformer",
  "version": "0.1.3",
  "description": "",
  "license": "Apache-2.0",
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "scripts": {
    "build:grammar": "npx nearleyc src/parser/openfga.ne > src/parser/grammar.ts",
    "build:ts": "rm -rf dist/ && tsc --outDir dist/",
    "build": "npm run build:grammar; npm run build:ts",
    "build:npx": "tsc --build tsconfig.json",
    "clean": "rm -r dist/",
    "prepublishOnly": "npm run build",
    "test": "npm run build:grammar; jest --config ./tests/jest.config.js",
    "typecheck": "npm run build:grammar; tsc  --skipLibCheck",
    "lint": "eslint . --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "format:check": "prettier --check {src,tests}/**",
    "format:fix": "prettier --write {src,tests}/**"
  },
  "bin": {
    "@openfga/syntax-transformer": "./dist/bin/index.js"
  },
  "keywords": [
    "openfga",
    "authorization",
    "fga",
    "fine-grained-authorization",
    "rebac",
    "zanzibar"
  ],
  "author": "OpenFGA",
  "dependencies": {
    "@openfga/sdk": "^0.2.6",
    "assert-never": "^1.2.1",
    "nearley": "^2.20.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/lodash": "^4.14.195",
    "@types/nearley": "^2.11.2",
    "@types/node": "^20.4.2",
    "@types/prismjs": "^1.26.0",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.27.5",
    "jest": "^29.6.1",
    "monaco-editor": "0.41.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  },
  "files": [
    "README.md",
    "CHANGELOG.md",
    "LICENSE",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com:openfga/syntax-transformer.git"
  },
  "bugs": {
    "url": "https://github.com/openfga/syntax-transformer/issues"
  },
  "homepage": "https://github.com/openfga/syntax-transformer#readme",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "overrides": {
    "eslint-plugin-import": {
      "debug": "^3.1.0",
      "tsconfig-paths": {
        "json5": "^2.2.2"
      }
    },
    "semver": "7.5.3"
  }
}
